{
  "compilerOptions": {
    "target": "es6",

    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,

    "paths": {
      "@aldis/*": ["./*/src"]
    }
  }
}